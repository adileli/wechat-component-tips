/* components/tips/tips.wxss */

.mask {
  position: fixed;
  width: 100vw;
  height: 100vh;
  top: 0;
  left: 0;
  z-index: 1300;
  background: rgba(255, 255, 255, .2);
  display: flex;
  justify-content: center;
  align-items: center;
}

.tips{
  background: rgba(0, 0, 0, .8);
  color: #fff;
  min-width: 170rpx;
  height: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1301;
  border-radius: 20rpx;
  padding: 0 30rpx;
}

.icon-circle {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 80rpx;
  height: 80rpx;
  border: 1px solid #fff;
  border-radius: 50%;
  animation: circle-round 1s ease infinite alternate;
}

.icon {
  width: 50rpx;
  height: 50rpx;
}

@keyframes circle-round {
  from {
    transform: rotate(0);
  }
  to {
    transform: rotate(360deg);
  }
}